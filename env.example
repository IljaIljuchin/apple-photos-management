# Apple Photos Management Tool - Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================

# Default number of worker threads for parallel processing
EXPORT_WORKERS=8

# Batch size for file processing
EXPORT_BATCH_SIZE=100

# Maximum cache size for file metadata
EXPORT_CACHE_SIZE=10000

# Enable memory optimization for large datasets
EXPORT_MEMORY_OPTIMIZATION=true

# Enable performance monitoring
EXPORT_PERFORMANCE_MONITORING=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable colored console output
LOG_COLORED_OUTPUT=true

# Enable structured logging (JSON format)
LOG_STRUCTURED=false

# Maximum log file size in MB
LOG_MAX_SIZE=10

# Number of log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Performance monitoring interval in seconds
PERF_MONITOR_INTERVAL=1.0

# Performance metrics export interval in seconds
PERF_METRICS_INTERVAL=30.0

# Enable real-time performance optimization
PERF_AUTO_OPTIMIZATION=true

# Performance analysis threshold (files per second)
PERF_ANALYSIS_THRESHOLD=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable path validation
SECURITY_PATH_VALIDATION=true

# Enable filename sanitization
SECURITY_SANITIZE_FILENAMES=true

# Allowed user directories (comma-separated)
SECURITY_ALLOWED_DIRS=Downloads,Pictures,Desktop,Documents,Movies,Music,Public

# =============================================================================
# DUPLICATE HANDLING CONFIGURATION
# =============================================================================

# Default duplicate strategy
DUPLICATE_STRATEGY=keep_first

# Enable duplicate detection optimization
DUPLICATE_OPTIMIZATION=true

# Hash algorithm for duplicate detection (md5, sha1, sha256)
DUPLICATE_HASH_ALGORITHM=md5

# =============================================================================
# FILE ORGANIZATION CONFIGURATION
# =============================================================================

# Default directory structure (YEAR, YEAR_MONTH, YEAR_MONTH_DAY)
FILE_DIRECTORY_STRUCTURE=YEAR

# Enable filename conflict resolution
FILE_CONFLICT_RESOLUTION=true

# Enable file extension normalization
FILE_EXTENSION_NORMALIZATION=true

# =============================================================================
# METADATA CONFIGURATION
# =============================================================================

# Enable EXIF metadata extraction
METADATA_EXTRACT_EXIF=true

# Enable XMP metadata extraction
METADATA_EXTRACT_XMP=true

# Enable AAE metadata extraction
METADATA_EXTRACT_AAE=true

# Fallback to file creation date if no metadata
METADATA_FALLBACK_FILE_DATE=true

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Enable debug mode
DEBUG_MODE=false

# Enable verbose output
VERBOSE_OUTPUT=false

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. All boolean values can be: true, false, 1, 0, yes, no, on, off
# 2. All numeric values should be positive integers
# 3. String values are case-sensitive
# 4. Empty values will use defaults
# 5. Comments start with # and are ignored
# 6. Lines starting with # are ignored
# 7. Use quotes for values containing spaces or special characters
#
# =============================================================================
